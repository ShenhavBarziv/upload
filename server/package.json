{
  "name": "upload",
  "version": "1.0.0",
  "private": true,
  "description": "With this application you can transfer data to your pc via phone or any other device.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "test": "jest",
    "client": "npm --prefix ../client start",
    "client:build": "npm --prefix ../client run build"
  },
  "workspaces": [
    "client"
  ],
  "author": "Shenhav Barziv",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.13",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}